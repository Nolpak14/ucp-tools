# UCPtools Production Environment Variables
# Copy to .env.production on the server and fill in values

# Database
POSTGRES_PASSWORD=generate_a_strong_password_here
DATABASE_URL=postgresql://ucptools:${POSTGRES_PASSWORD}@ucptools-postgres:5432/ucptools

# Redis
REDIS_URL=redis://ucptools-redis:6379

# Application
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# Stripe (for payments)
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx

# Email (Resend)
RESEND_API_KEY=re_xxxxxxxxxxxxx

# Auth (Auth.js)
AUTH_SECRET=generate_a_32_char_random_string
AUTH_URL=https://api.ucptools.dev

# Optional: PostHog Analytics
POSTHOG_API_KEY=phc_xxxxxxxxxxxxx
POSTHOG_HOST=https://eu.posthog.com
